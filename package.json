{
  "name": "@typhonjs-plugin/manager",
  "description": "Provides a plugin manager & eventbus for Node & browser (supports ESM & CJS).",
  "version": "0.0.7",
  "author": "Michael Leahy <support@typhonjs.io> (https://github.com/typhonrt)",
  "type": "module",
  "main": "dist/node/PluginManager.js",
  "module": "dist/node/PluginManager.js",
  "browser": "dist/browser/PluginManager.js",
  "contributors": [
    "Michael Leahy <support@typhonjs.io> (https://github.com/typhonrt)"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@rollup/plugin-alias": "^3.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-node-resolve": "^11",
    "@typhonjs-plugin/eventbus": "^0.0.4",
    "@typhonjs-utils/build-test": "^0.1.0",
    "@typhonjs-utils/build-test-browser": "^0.0.7",
    "@typhonjs-utils/loader-module": "^0.0.1",
    "@typhonjs-utils/object": "^0.0.0",
    "rollup": "^2",
    "rollup-plugin-dts": "^3.0.0",
    "rollup-plugin-istanbul": "^3.0.0",
    "rollup-plugin-terser": "^7"
  },
  "engines": {
    "node": ">=12.2"
  },
  "types": "./types/index.d.ts",
  "files": [
    "/npm-shrinkwrap.json",
    "/dist",
    "/src",
    "/types"
  ],
  "homepage": "https://github.com/typhonjs-node-plugin/manager",
  "keywords": [
    "typhonjs",
    "plugin",
    "manager"
  ],
  "license": "MPL-2.0",
  "repository": "github:typhonjs-node-plugin/manager",
  "bugs": "https://github.com/typhonjs-node-plugin/manager/issues",
  "scripts": {
    "bundle": "rollup --config",
    "bundle-browser": "rollup --config rollup.config.browser.js",
    "eslint": "eslint .",
    "posttest-browser": "nyc report --exclude-after-remap=true --reporter=lcov --reporter=text-summary --report-dir=coverage-browser",
    "pretest-browser": "npm run bundle-browser",
    "pretest-node": "npm run bundle",
    "prepublishOnly": "npm run types && npm run test-node && npm run test-browser",
    "test-browser": "node ./test/src/browser/run.js",
    "test-node": "c8 --exclude-after-remap=true --reporter=lcov --reporter=text-summary mocha -colors \"test/src/node/**/*.test.js\" --timeout 10000",
    "types": "npx -p typescript tsc --project tsconfig.types.json && rollup --config rollup.config.types.js"
  }
}
